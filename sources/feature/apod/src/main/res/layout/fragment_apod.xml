<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/apod_conteiner_padding"
        tools:context=".ApodFragment">


        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title_margin_bottom"
            android:text="@string/hello_blank_fragment"
            android:textColor="@color/dark_blue_color"
            android:textSize="@dimen/title_text_size"
            tools:text="Asteroid or Potato?" />

        <LinearLayout
            android:layout_marginTop="@dimen/date_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_blank_fragment"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/content_text_size"
                tools:text="28 Apr 2019" />

            <Button
                android:id="@+id/select_date_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/apod_conteiner_padding"
                android:background="@drawable/blue_rounded_button"
                android:padding="@dimen/apod_conteiner_padding"
                android:text="@string/select_date_text"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView

            android:id="@+id/apod_image_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/image_height"
            android:layout_marginTop="@dimen/apod_conteiner_padding"
            android:scaleType="centerCrop"
            tools:src="@drawable/apod_onboarding" />

        <TextView
            android:id="@+id/explanation_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/apod_conteiner_padding"
            android:textColor="@color/dark_gray_color"
            android:textSize="@dimen/content_text_size"
            tools:text="@string/mock_explanation_text" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>